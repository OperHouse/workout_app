<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Слой 1: фон с верхним скруглением -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_1"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>

    <!-- Слой 2: обводка (по всем сторонам) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/light_gray2"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>

    <!-- Слой 3: маска внизу, чтобы скрыть нижнюю линию -->
    <item android:top="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_1"/>
        </shape>
    </item>

</layer-list>