<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_border"
    android:padding="10dp">

    <TextView
        android:id="@+id/eatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название еды"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/eatAmount"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/eatAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 гр"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/eatName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/eatPfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Б: 5.0 / Ж: 3.0 / У: 10.0"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/eatName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/eatCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 ккал"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/eatPfc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
