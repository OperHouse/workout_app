<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/card_border">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбор количества пищи"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonBack1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonBack1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.example.workoutapp.NutritionCircleView
        android:id="@+id/NutritionCircleView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent" />


        <!-- Белки -->
    <View
        android:id="@+id/proteinColor"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/protein_red"
        app:layout_constraintStart_toEndOf="@+id/NutritionCircleView"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/textViewProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Белки"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/proteinColor"
            app:layout_constraintTop_toTopOf="@id/proteinColor" />

        <!-- Жиры -->
    <View
        android:id="@+id/fatColor"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/fat_yellow"
        app:layout_constraintStart_toStartOf="@+id/proteinColor"
        app:layout_constraintTop_toBottomOf="@id/proteinColor" />

        <TextView
            android:id="@+id/textViewFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Жиры"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/fatColor"
            app:layout_constraintTop_toTopOf="@id/fatColor" />

        <!-- Углеводы -->
    <View
        android:id="@+id/carbColor"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/carb_green"
        app:layout_constraintStart_toStartOf="@+id/fatColor"
        app:layout_constraintTop_toBottomOf="@id/fatColor" />

        <TextView
            android:id="@+id/textViewCarb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Углеводы (33.0 гр)"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/carbColor"
            app:layout_constraintTop_toTopOf="@id/carbColor" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Калории: 250 ккал"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/carbColor"
        app:layout_constraintTop_toBottomOf="@id/textViewCarb" />


    <!-- Надпись Количество пищи -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Количество пищи"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/NutritionCircleView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Поле выбора/ввода количества -->
    <FrameLayout
        android:id="@+id/amountSwitcher"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:clickable="true"
                android:cursorVisible="false"
                android:dropDownHeight="300dp"
                android:focusable="false"
                android:inputType="none"
                android:paddingStart="10dp"
                android:popupTheme="@style/AppPopupTheme"/>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_back"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray2"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- Кнопка -->
    <Button
        android:id="@+id/createWorkBtn"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_2"
        android:text="Добавить еду"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/amountSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
